{
  "name": "@cobuildlab/pure-logger",
  "version": "0.3.2",
  "description": "A Simple logger for Typescript applications with Rollbar integration.",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "eslint": "eslint --fix",
    "build": "tsc"
  },
  "homepage": "https://github.com/cobuildlab/pure-logger",
  "bugs": {
    "url": "https://github.com/cobuildlab/pure-logger/issues"
  },
  "author": "Angel Lacret",
  "license": "GPL-3.0",
  "devDependencies": {
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-typescript": "^7.15.0",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.14.9",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsdoc": "^32.3.3",
    "husky": "7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "11.1.2",
    "prettier": "2.3.2",
    "typescript": "4.3.5"
  },
  "dependencies": {
    "@aws-sdk/client-cloudwatch-logs": "^3.54.1",
    "@aws-sdk/url-parser-node": "^3.1.0",
    "rollbar": "2.24.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/v2/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/(build|node_modules)/"
    ],
    "testRegex": [
      ".test.ts$",
      ".test.tsx$"
    ]
  }
}
